<Window x:Class="Layout_management_Grid.Voorbeeld2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TabularGrid" Height="300" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button>Button1</Button>
        <Button Grid.Column="1">Button2</Button>
        <Button Grid.Column="2">Button3</Button>
        <Button Grid.Row="1">Button4</Button>
        <Button Grid.Column="1" Grid.Row="1">Button5</Button>
        <Button Grid.Column="2" Grid.Row="1">Button6</Button>
        <Button Grid.Row="2">Button7</Button>
        <Button Grid.Column="1" Grid.Row="2">Button8</Button>
        <Button Grid.Column="2" Grid.Row="2">Button9</Button>
    </Grid>
</Window>